# -*- mode: python -*-

Import("env")

env.Library('thread_name',
            ['thread_name.cpp'],
            LIBDEPS=['$BUILD_DIR/mongo/base/base',
                     '$BUILD_DIR/third_party/shim_boost'])

env.Library(
    target='thread_pool',
    source=[
        'old_thread_pool.cpp',
        'thread_pool.cpp',
    ],
    LIBDEPS=[
        '$BUILD_DIR/mongo/util/foundation',
    ],
)

env.CppUnitTest(
    target='thread_pool_test',
    source=['thread_pool_test.cpp'],
    LIBDEPS=['thread_pool'])

env.Library('ticketholder',
            ['ticketholder.cpp'],
            LIBDEPS=['$BUILD_DIR/mongo/base/base',
                     '$BUILD_DIR/third_party/shim_boost'])

env.Library(
    target='synchronization',
    source=[
        'synchronization.cpp'
    ],
)

env.Library(
    target='spin_lock',
    source=[
        "spin_lock.cpp",
    ],
)

env.CppUnitTest(
    target='spin_lock_test',
    source=[
        'spin_lock_test.cpp',
    ],
    LIBDEPS=[
        'spin_lock',
        '$BUILD_DIR/third_party/shim_boost',
    ],
)

env.Library(
    target='task',
    source=[
        'task.cpp',
    ],
    LIBDEPS=[
    ],
)

env.Library(
    target='rwlock',
    source=[
        'rwlockimpl.cpp',
    ],
    LIBDEPS=[
    ],
)
